// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String   @map("nome")
  phone     String   @unique @map("telefone")
  email     String?  @unique
  password  String   @map("senha")
  role      String   @default("client") @map("funcao") // "client" | "barbershop_owner" | "admin"
  
  barbershops   Barbershop[]
  appointments  Appointment[]
  reviews       Review[]
  favorites     Favorite[]
  passwordResets PasswordReset[]
  
  createdAt DateTime @default(now()) @map("criado_em")
  updatedAt DateTime @updatedAt @map("atualizado_em")

  @@map("usuarios")
}

model Barbershop {
  id        String   @id @default(uuid())
  name      String   @map("nome")
  phone     String   @map("telefone")
  address   String   @map("endereco")
  latitude  String?  @map("latitude")
  longitude String?  @map("longitude")
  rating    Float?   @default(0) @map("avaliacao")
  ownerId   String   @map("dono_id")
  
  owner         User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  services      Service[]
  appointments  Appointment[]
  reviews       Review[]
  favorites     Favorite[]
  
  createdAt DateTime @default(now()) @map("criado_em")
  updatedAt DateTime @updatedAt @map("atualizado_em")

  @@map("barbearias")
  @@index([ownerId])
}

model Service {
  id            String   @id @default(uuid())
  barbershopId  String   @map("barbershop_id")
  name          String   @map("nome")
  description   String?  @map("descricao")
  price         Float    @map("preco")
  duration      Int      @map("duracao")
  
  barbershop    Barbershop @relation(fields: [barbershopId], references: [id], onDelete: Cascade)
  appointments  Appointment[]
  
  createdAt DateTime @default(now()) @map("criado_em")

  @@map("servicos")
}

model Appointment {
  id              String   @id @default(uuid())
  barbershopId    String   @map("barbershop_id")
  clientId        String   @map("cliente_id")
  serviceId       String   @map("servico_id")
  appointmentDate DateTime @map("data_agendamento")
  appointmentTime String   @map("hora_agendamento")
  status          String   @default("confirmed") @map("status")
  notes           String?  @map("notas")
  
  barbershop      Barbershop @relation(fields: [barbershopId], references: [id], onDelete: Cascade)
  client          User       @relation(fields: [clientId], references: [id], onDelete: Cascade)
  service         Service    @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  cancellation    Cancellation?
  
  createdAt DateTime @default(now()) @map("criado_em")
  updatedAt DateTime @updatedAt @map("atualizado_em")

  @@map("agendamentos")
}

model Review {
  id           String   @id @default(uuid())
  barbershopId String   @map("barbershop_id")
  userId       String   @map("usuario_id")
  rating       Int      @map("avaliacao")
  comment      String?  @map("comentario")
  
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id], onDelete: Cascade)
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now()) @map("criado_em")

  @@map("avaliacoes")
}

model Favorite {
  id           String   @id @default(uuid())
  userId       String   @map("usuario_id")
  barbershopId String   @map("barbershop_id")
  
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now()) @map("criado_em")

  @@unique([userId, barbershopId])
  @@map("favoritos")
}

model Cancellation {
  id            String   @id @default(uuid())
  appointmentId String   @unique @map("agendamento_id")
  reason        String?  @map("motivo")
  cancelledBy   String   @map("cancelado_por")
  
  appointment   Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now()) @map("criado_em")

  @@map("cancelamentos")
}

model Availability {
  id           String   @id @default(uuid())
  barbershopId String   @map("barbershop_id")
  date         String   @map("data")
  startTime    String   @map("hora_inicio")
  endTime      String   @map("hora_fim")
  isAvailable  Boolean  @default(true) @map("disponivel")
  
  createdAt DateTime @default(now()) @map("criado_em")

  @@map("disponibilidades")
}

model PasswordReset {
  id        String   @id @default(uuid())
  userId    String   @map("usuario_id")
  token     String   @unique
  expiresAt DateTime @map("expira_em")
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now()) @map("criado_em")

  @@map("recuperacoes_senha")
}

model SystemVersion {
  id        String   @id @default(uuid())
  major     Int      @default(0)
  minor     Int      @default(1)
  patch     Int      @default(0)
  migration Int      @default(0) @map("migracao_numero")
  
  createdAt DateTime @default(now()) @map("criado_em")
  updatedAt DateTime @updatedAt @map("atualizado_em")

  @@map("versoes_sistema")
}
