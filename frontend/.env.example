# BarberFlow Frontend Environment Variables
# Copie este arquivo para .env.local e preencha com seus valores

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# Em produção, use:
# NEXT_PUBLIC_API_URL=https://seu-dominio.com/api
# NEXT_PUBLIC_SOCKET_URL=https://seu-dominio.com

# Google OAuth (opcional)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=seu_google_client_id_aqui

# Analytics (opcional)
NEXT_PUBLIC_ANALYTICS_ID=seu_analytics_id

# App Configuration
NEXT_PUBLIC_APP_NAME=BarberFlow
NEXT_PUBLIC_APP_VERSION=1.0.0
